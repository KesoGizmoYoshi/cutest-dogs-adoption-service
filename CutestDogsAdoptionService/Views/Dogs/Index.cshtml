@model List<DogModel>

<div class="container d-flex justify-content-center">
    <h1 class="p-5">Number of dogs with a cuteness score over 5: @ViewData["cutnessOver5"]</h1>
</div>

<div class="container d-flex flex-wrap justify-content-around">

@foreach(DogModel dog in Model){
    <div class="card  text-center w-25">
        <div class="card-img-top pt-3">
            <img src="~/img/@dog.Image" class="w-50">
        </div>
        <div class="card-body">
                <h1>@dog.Name</h1>
                @if (dog.Adopted)
                {
                    <a class="btn btn-danger disabled">Already adopted!</a>
                }
                else
                {
                    <a asp-controller="Dogs" asp-action="Details" asp-route-id="@dog.Id" class="btn btn-primary" >Adopt me!</a>     
                }
        </div>
    </div>
}

</div>

